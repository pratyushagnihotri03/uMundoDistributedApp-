<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tictactoe.TicTacToeFinalActivity"
    android:background="#000000" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="120dp"
		android:typeface="sans"
		android:gravity="center"
        android:textColor="#ffaa00"
        android:textSize="16sp"/>
    
     <Button
         android:id="@+id/btn00"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_below="@+id/header"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="50dp"
         android:text="" >
</Button>

    <Button
        android:id="@+id/btn01"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/header"
        android:layout_toRightOf="@+id/btn00"
        android:text=""></Button>

    <Button
        android:id="@+id/btn02"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/btn01"
        android:layout_alignLeft="@+id/btn12"
        android:layout_below="@+id/header"
        android:layout_marginTop="50dp"
        android:text="" >

</Button>

     <Button
         android:id="@+id/btn10"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_alignBottom="@+id/btn12"
         android:layout_alignRight="@+id/btn00"
         android:layout_below="@+id/btn00"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="10dp"
         android:text="" >
</Button>"

      <Button
          android:id="@+id/btn11"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_alignBottom="@+id/btn10"
          android:layout_alignRight="@+id/btn01"
          android:layout_alignTop="@+id/btn12"
          android:layout_marginLeft="20dp"
          android:layout_toRightOf="@+id/btn10"
          android:text="" >

</Button>

      <Button
          android:id="@+id/btn12"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_below="@+id/btn02"
          android:layout_toRightOf="@+id/btn11"
          android:text=""></Button>

      <Button
          android:id="@+id/btn20"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_marginLeft="35dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_below="@+id/btn10"
          android:text=""></Button>

      <Button
          android:id="@+id/btn21"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_alignLeft="@+id/btn11"
          android:layout_below="@+id/btn11"
          android:layout_marginBottom="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:text="" >
</Button>

      <Button
          android:id="@+id/btn22"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_alignBottom="@+id/btn21"
          android:layout_alignLeft="@+id/btn12"
          android:layout_alignTop="@+id/btn21"
          android:text="" >

</Button>

      <TextView
          android:id="@+id/txtLbl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="70dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:layout_below="@+id/btn20"
          android:text="@string/Playing"
          android:textColor="#ffaa00"
          android:textSize="20sp" ></TextView>

      <TextView
          android:id="@+id/playerLbl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/btn20"
          android:layout_below="@+id/txtLbl"
          android:text="@string/Player1"
          android:textColor="#ffaa00"
          android:textSize="16sp" />

     </RelativeLayout>  